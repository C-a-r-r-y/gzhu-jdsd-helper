{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "incremental": true,
    "types": ["node"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/node_modules/*", "out"]
}
